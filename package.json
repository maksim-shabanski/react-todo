{
  "name": "react-todo",
  "version": "0.0.0",
  "description": "Pet todo application",
  "author": "Maksim Shabanski",
  "license": "MIT",
  "keywords": [
    "js",
    "react",
    "redux",
    "todo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maksim-shabanski/todo.git"
  },
  "bugs": {
    "url": "https://github.com/maksim-shabanski/todo/issues"
  },
  "homepage": "https://github.com/maksim-shabanski/todo#readme",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.dev.js -d --mode development",
    "build": "webpack --config webpack.config.prod.js",
    "test": "jest",
    "clean": "rm -rf ./dist",
    "predeploy": "npm run clean && npm run build",
    "deploy": "gh-pages -d dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --debug --fix"
    ]
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx}",
      "src/containers/**/*.{js,jsx}",
      "src/actions/**/*.{js,jsx}",
      "src/reducers/**/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "babel-jest"
    }
  },
  "dependencies": {
    "@modulz/radix-icons": "^3.2.0",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.6.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^2.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.1",
    "node-sass": "^4.14.1",
    "path": "^0.12.7",
    "prettier": "^2.1.2",
    "sass-loader": "^10.0.4",
    "style-loader": "^1.3.0",
    "stylelint": "^13.7.2",
    "stylelint-config-hudochenkov": "^5.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
